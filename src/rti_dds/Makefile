TARGET_ARCH = x64Linux3gcc4.8.2

ifndef COMPILER
COMPILER = g++
endif
COMPILER_FLAGS = -g -m64 -Wall
ifndef LINKER
LINKER = g++
endif
LINKER_FLAGS = -m64 -static-libgcc -Wl,--no-as-needed
SYSLIBS = -ldl -lnsl -lm -lpthread -lrt -lboost_system -lboost_thread
DEFINES = -DRTI_UNIX -DRTI_LINUX 
LIBFILES = objs/$(TARGET_ARCH)/rti_dds.o objs/$(TARGET_ARCH)/rti_ddsPlugin.o objs/$(TARGET_ARCH)/rti_ddsSupport.o objs/$(TARGET_ARCH)/rti_impl.o


INCLUDES = -I. -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds 
LIBS = -L$(NDDSHOME)/lib/$(TARGET_ARCH) \
        -lnddscppz -lnddscz -lnddscorez $(SYSLIBS)

CDRSOURCES    = rti_dds.idl
COMMONSOURCES = rti_ddsSupport.cxx rti_ddsPlugin.cxx rti_dds.cxx rti_impl.cxx 

EXEC          = test
DIRECTORIES   = objs.dir objs/$(TARGET_ARCH).dir
COMMONOBJS    = $(COMMONSOURCES:%.cxx=objs/$(TARGET_ARCH)/%.o)

all: $(TARGET_ARCH) librti_dds.a

rti_dds:
	$(NDDSHOME)/bin/rtiddsgen -language C++ -example x64Linux3gcc4.8.2 rti_dds.idl

librti_dds.a: $(LIBFILES)
	ar rcs $@ $^

# We actually stick the objects in a sub directory to keep your directory clean.
$(TARGET_ARCH) : $(DIRECTORIES) $(COMMONOBJS) \
	$(EXEC:%=objs/$(TARGET_ARCH)/%.o) \
	$(EXEC:%=objs/$(TARGET_ARCH)/%)

objs/$(TARGET_ARCH)/% : objs/$(TARGET_ARCH)/%.o
	$(LINKER) $(LINKER_FLAGS)   -o $@ $@.o $(COMMONOBJS) $(LIBS)

objs/$(TARGET_ARCH)/%.o : %.cxx  rti_dds.h 
	$(COMPILER) $(COMPILER_FLAGS)  -o $@ $(DEFINES) $(INCLUDES) -c $<

#
# Uncomment these lines if you want the support files regenerated when idl
# file is modified
#
#
#  rti_ddsSupport.cxx rti_ddsPlugin.cxx rti_dds.cxx \
#  rti_ddsSupport.h rti_ddsPlugin.h rti_dds.h : \
#		rti_dds.idl
#	$(NDDSHOME)/bin/rtiddsgen rti_dds.idl -replace -language C++

# Here is how we create those subdirectories automatically.
%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;

clean:
	rm objs -rf
	rm librti_dds.a -f

.PHONY: all clean

